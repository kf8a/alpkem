<tr class="p-4 even:bg-gray-100 odd:bg-white" id="sample-<%=sample.id%>">
  <td class="text-center p-2"><%= sample.id %></td>
  <td class="text-center p-2"><%= sample.plot_name %></td>
  <td class="text-center p-2"><%= sample.sample_date %></td>
  <%= render :partial => 'analyte', :collection => @analytes, :locals => {:sample => sample}%>
  <% notword = ("" if sample.approved?) || "not" %>

  <% if sample.approved? %>
  <td class="bg-yellow-300">Sample is <%= notword %> approved!<br />
  <% else %>
    <td class="">Sample is <%= notword %> approved!<br />
  <% end %>
    <%= button_to "Toggle approval", {:action => 'approve', :id => sample.id, :run_id => @run.id}, {class: "bg-blue-500 text-white p-2 rounded-md hover:cursor-pointer", :data => {:turbo_method => :post}, :format => :turbo_stream} %>
  </td>
  <td>
  </td>
</tr>
