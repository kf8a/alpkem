<tr class="<%= cycle("even", "odd") -%>">
	<td><%= sample.plot.name %></td>
	<td><%= sample.sample_date %></td>
	<%= render :partial => 'analyte', 
		:locals => {:sample => sample, :analyte => nh4} %>
		<%= render :partial => 'analyte', 
			:locals => {:sample => sample, :analyte => no3} %>
		<tr>
			<td>approved:</td>
			<% @sample = sample %>
			<td><%= check_box 'sample', 'approved', { :onclick=>remote_function(:url => {:action => 'approve', :id => sample})}%></td>
		</tr>
</tr>